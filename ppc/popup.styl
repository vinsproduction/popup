// _________ MIXINS _________

@require 'mixins'


/* 
	================
	==== POPUPS ====
	================
*/


body.popup-open
	overflow hidden
	position fixed
	width 100%

#popups
	
	z-index 998
	display none
	overflow-y auto
	overflow-x hidden
	position fixed
	height 100%
	width 100%
	top 0
	left 0

	.background

		position fixed
		height 100%
		width 100%
		top 0
		left 0
		overflow auto
		background #000
		opacity 0.8

	.popup
		z-index 999
		position absolute
		display none
		width 100%
		height 100%
	
		.inner
			position absolute
			borderbox()
			color #000
			background #FFF
			width 320px
			min-height 200px
			padding 50px 30px

			.close
				cursor pointer
				position absolute
				right 10px
				top 10px
				width 14px
				height 14px
				background url('../img/close-popup.png') center center no-repeat
				z-index 1


#popups .popup
	
	.inner

		.title
			text-align center
			color #000
			font-size 18px

		.body
			margin 30px 0 0 0
			color #000
			font-size 16px 
			p
				font-size 16px

		.button
			margin 30px auto 0 auto
			padding 16px 35px 0 35px
			borderbox()
			display table
			height 50px
			min-width 100px
			cursor pointer
			background-color #005697
			font-size 16px
			text-align center
			color #FFF
			&:hover
				background #004677
	

	&[data-popup-name="custom"],&[data-popup-name="success"],&[data-popup-name="error"]
		.inner
			.title
				text-align center
			.body
				text-align center
				

	&[data-popup-name="test"]
		.inner
